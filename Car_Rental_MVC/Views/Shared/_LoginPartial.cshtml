<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        @if(User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="UsersInfo">Users Info</a>
            </li>    
        }
        <li class="nav-item">
            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="RentedCars">Rented Cars</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-light" title="Manage" asp-area="" asp-controller="Home" asp-action="EditUserProfileByUser" asp-route-returnUrl="@Context.Request.Path">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Authentication" asp-action="Logout">
